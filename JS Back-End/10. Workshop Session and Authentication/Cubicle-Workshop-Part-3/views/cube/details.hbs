{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{description}}</p>
  <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
  <a class="btn" href="/">Back</a>
  <a class="btn" href="/cube/{{_id}}/attach">Attach</a>
  <a class="btn" href="/cube/{{_id}}/edit">Edit</a>
  <a class="btn" href="/cube/{{_id}}/delete">Delete</a>
</div>
  {{#if accessories}}
  <h2>Accessories</h2>
  <div class="accessories">
    {{#each accessories}}
      {{>accessory}}
    {{/each}}
  {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>
{{/with}}